<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 0
        canvas.before:
            Color:
                rgba: 150/255, 150/255, 150/255, 1  
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: None
            height: '32dp'
            spacing: 230
            pos_hint: {'center_x': 0.5}

            Button:
                id: left_button
                background_color: 0, 1, 1, 0
                size_hint: None, None
                size: 64, 64  # Set size according to the icon size
                on_press: app.root.current = 'setting'
                Image:
                    source: 'png_files/set_icon.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                id: center_button
                background_color: 0, 1, 1, 0
                size_hint: None, None
                size: 64, 64  
                Image:
                    source: 'png_files/mic_icon.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                id: right_button
                background_color: 0, 1, 1, 0
                size_hint: None, None
                size: 64, 64  
                on_press: app.root.current = 'second'
                Image:
                    source: 'png_files/speak_icon.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 

        Camera:
            id: camera
            resolution: (640, 480) 
            size_hint: 1, 0.8
            play: True

 

        BoxLayout:
            size_hint_y: None
            height: '100dp' 
            padding: 0,0,0,0
            pos_hint: {'center_x': 0.86}
            spacing: 50
            Button:
                id: camera_button
                size_hint: None, None
                size: 200, 200
                background_normal: ''
                background_color: (60/255, 60/255, 60/255, 0)  
                on_press: root.capture_image()
                on_press: app.root.current = 'second'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]
                Image:
                    source: 'png_files/button_cam.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

<SecondScreen>:
    name: 'second'
    BoxLayout:
        orientation: 'vertical'
        padding: 60, 20
        spacing: 0
        canvas.before:
            Color:
                rgba: 150/255, 150/255, 150/255, 1   
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: 0.1 

        BoxLayout:
            size_hint_y: None 
            pos_hint: {'center_x': 0.5}
            height: '350dp'           
            spacing: 50
            Button:
                id: main_button
                padding: 10, 20
                text: root.product_data if root.product_data else ''                             #Binds product_data to the button text(텍스트에 출력)
                pos_hint: {'center_y': 0.5}
                size_hint_y: 1
                text_size: self.size 
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)                                 
                halign: 'center'
                valign: 'middle'
                on_press: app.root.current = 'main'
                canvas.before:
                    Color:                        
                        rgba: 60/255, 165/255, 113/255, 1  
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [18, 18, 18, 18]  

        BoxLayout:
            size_hint_y: 0.1  

        BoxLayout:
            size_hint_y: None
            height: '100dp'  
            pos_hint: {'center_x': 0.6}
            spacing: 50
            Button:
                id: back_button
                size_hint: None, None
                size: 200, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'main'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]  
                Image:
                    source: 'png_files/button_back.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                id: basket_button
                size_hint: None, None
                size: 200, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'basket'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]
                Image:
                    source: 'png_files/button_bas.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 

<BasketScreen>:
    name: 'basket'
    BoxLayout:
        orientation: 'vertical'
        padding: 60, 20
        spacing: 10

        ScrollView:  # Add a ScrollView to enable scrolling
            GridLayout:  # Use GridLayout to organize the widgets
                id: basket_grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height  # Set the height based on the content
                spacing: 10

                Label:
                    text: 'Product Names'
                    size_hint_y: None
                    height: 40
                    font_size: 18
                    bold: True
                    halign: 'center'
                    valign: 'middle'

                # Add labels dynamically for each product in the basket
                # Use a for loop to iterate over the basket_items list
                # Each item in basket_items is a tuple containing product name and price
                # Create a label for each product name and add it to the GridLayout
                # Use string formatting to display product name and price together
                # Iterate over root.basket_items to access each item in the basket
                # Set the text of the label to the product name and price
                # Use font_size, bold, halign, valign properties to style the label
                Label:
                    text: '\n'.join([f"{item[0]}: ${item[1]:.2f}" for item in root.basket_items])
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_size: 16
                    bold: False
                    halign: 'left'
                    valign: 'middle'

        Label:
            id: price_label  # Display the total price
            text: "Total Price: $" + str(root.total_price)
            size_hint_y: None
            height: 40
            font_size: 18
            bold: True
            halign: 'center'
            valign: 'middle'

        # Main Button: Takes user back to the main screen
        BoxLayout:
            size_hint_y: None 
            pos_hint: {'center_x': 0.5}
            height: '270dp'           
            spacing: 50
            Button:
                id: main_button
                padding: 10, 10
                text: ''
                pos_hint: {'center_y': 0.5}
                size_hint_y: 1
                text_size: self.size 
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)                                 
                halign: 'center'
                valign: 'middle'
                on_press: app.root.current = 'main'  # Navigate to the main screen when pressed
                canvas.before:
                    Color:                        
                        rgba: 60/255, 165/255, 113/255, 1  
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [18, 18, 18, 18]  

        BoxLayout:
            size_hint_y: 0.1  

        # Back Button: Takes user to the payment screen
        BoxLayout:
            size_hint_y: None
            height: '100dp'  
            pos_hint: {'center_x': 0.50}
            spacing: 50
            padding: 10,30
            Button:
                id: back_button
                size_hint: None, None
                size: 560, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'pay'  # Navigate to the payment screen when pressed
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]  
                Image:
                    source: 'png_files/button_card.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

        BoxLayout:
            size_hint_y: None
            height: '100dp'  
            pos_hint: {'center_x': 0.52}
            spacing: 50
            # Back Button: Takes user back to the main screen
            Button:
                id: back_button
                size_hint: None, None
                size: 250, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'main'  # Navigate to the main screen when pressed
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]  
                Image:
                    source: 'png_files/button_back.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            # Basket Button: Performs an action related to the basket (e.g., clear items)
            Button:
                id: basket_button
                size_hint: None, None
                size: 270, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'main'  # Perform an action related to the basket when pressed
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]
                Image:
                    source: 'png_files/button_trash.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 


