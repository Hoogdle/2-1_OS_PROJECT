        BoxLayout:
            size_hint_y: None
            height: '100dp'  # Increase the height to accommodate the button size
            padding: [0, 0]
            pos_hint: {'center_x': 0.67}
            spacing: 50
            
            Button:
                id: back_button
                text: 'Back'
                size_hint: None, None
                size: 200, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 1)  # Change alpha to 1
                on_press: app.root.current = 'main'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
